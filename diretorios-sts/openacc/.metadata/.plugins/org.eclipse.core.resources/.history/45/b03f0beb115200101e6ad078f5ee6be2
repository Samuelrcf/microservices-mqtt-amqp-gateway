package operacoes_matrizes.multiplicacao;

public class Multiplicacao_Matrizes {
    static {
        System.loadLibrary("matrix");
    }

    public native void matrixMultiply(float[] A, float[] B, float[] C, int N);

    public static void main(String[] args) {
        int N = 3;
        float[] A = new float[N * N];
        float[] B = new float[N * N];
        float[] C = new float[N * N];

        // Inicializar matrizes
        for (int i = 0; i < N * N; i++) {
            A[i] = 1.0f;
            B[i] = 2.0f;
        }

        new Multiplicacao_Matrizes().matrixMultiply(A, B, C, N);

        System.out.println("Resultado:");
        for (int i = 0; i < N; i++) {
            for (int j = 0; j < N; j++) {
                System.out.print(C[i * N + j] + " ");
            }
            System.out.println();
        }
    }
}

