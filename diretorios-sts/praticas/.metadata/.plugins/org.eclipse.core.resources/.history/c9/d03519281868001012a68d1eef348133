package com.ufersa.apigateway.ui;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/dashboard")
public class DashboardController {

    private final DashboardService dashboardService;

    public DashboardController(DashboardService dashboardService) {
        this.dashboardService = dashboardService;
    }

    @GetMapping
    public DashboardResponse getResumoDashboard() {
        return dashboardService.gerarResumo();
    }

    // Endpoint opcional para adicionar manualmente dados simulados
    @PostMapping("/processar")
    public ResponseEntity<String> processar(@RequestBody String dado) {
        dashboardService.processarDado(dado);
        return ResponseEntity.ok("Dado processado com sucesso.");
    }
}


